<div>
  <div>
    <%= attachment_image_tag @photo_post, :photo_image, size: "500x500" %>
  </div>
  <div>
    <%= @photo_post.created_at.strftime("%Y年%m月%d日").to_s %>
  </div>
  <div>
    <p>いいね</p>
    <p>ブックマーク</p>
  </div>
  <div>
    <%= link_to user_path(@photo_post.user) do %>
      <%= attachment_image_tag @photo_post.user, :profile_image, size: "20x20" %>
      <%= @photo_post.user.name %>
    <% end %>
  </div>
</div>
<h3>コメント</h3>
<div>
  <% @photo_post_comments.each do |photo_post_comment| %>
    <%= link_to user_path(photo_post_comment.user) do %>
      <%= attachment_image_tag photo_post_comment.user, :profile_image, size: "20x20" %>
      <%= photo_post_comment.user.name %>
    <% end %>
    <%= photo_post_comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with(model:[@photo_post, @photo_post_comment], url: photo_post_comments_path, local: true) do |f| %>
    <%= f.text_field :comment %>
    <%= f.hidden_field :photo_post_id, value: @photo_post.id %>
    <%= f.submit "投稿する" %>
  <% end %>
</div>