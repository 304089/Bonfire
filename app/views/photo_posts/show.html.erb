<div>
  <div>
    <%= link_to user_path(@photo_post.user) do %>
      <%= attachment_image_tag @photo_post.user, :profile_image, size: "20x20" %>
      <%= @photo_post.user.name %>
    <% end %>
  </div>
  <div>
    <%= attachment_image_tag @photo_post, :photo_image, size: "500x500" %>
  </div>
  <div>
    <%= @photo_post.created_at.strftime("%Y年%m月%d日").to_s %>
  </div>
  <div>
    <div id="photo_post_favorite">
      <%= render "favorites/favorite", photo_post: @photo_post %>
    </div>
  </div>
  <div>
    <div id="photo_post_bookmark">
      <%= render "bookmarks/bookmark", photo_post: @photo_post %>
    </div>
  </div>
  <div>
    <%= link_to photo_post_photo_post_comments_path(@photo_post) do %>
      <i class="far fa-comment-dots"></i>
    <% end %>
  </div>
  <div>
    <%= render "tags", tag_list: @photo_post.tag_list %>
  </div>
</div>
