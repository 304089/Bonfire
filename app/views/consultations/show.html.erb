<h4><%= @consultation.user.name %>さんからの相談</h4>
<div>タイトル：<%= @consultation.title %></div>
<div>内容：<%= @consultation.content %></div>
<div><%= attachment_image_tag @consultation, :consultation_image, size: "400x400" %></div>

<h3>回答</h3>
<div>
  <%= form_with(model:[@consultation, @consultation_answer], url: consultation_consultation_answer_path(@consultation), local: true) do |f| %>
    <%= f.text_field :answer %>
    <%= f.attachment_field :answer_image %>
    <%= f.submit "投稿する" %>
  <% end %>
</div>
<div>
  <% @consultation_answers.each do |consultation_answer| %>
    <div>
      <%= link_to user_path(consultation_answer.user) do %>
        <%= attachment_image_tag consultation_answer.user, :profile_image, size: "20x20" %>
        <%= consultation_answer.user.name %>
      <% end %>
    </div>
    <div>
      <%= attachment_image_tag consultation_answer, :answer_image, size: "100x100" %>
    </div>
    <div>
      <%= consultation_answer.answer %>
    </div>
    <div>
    <% if consultation_answer.helped_by?(current_user) %>
      <p>
        <%= link_to consultation_consultation_answer_helpfulness_path(consultation_answer.consultation,consultation_answer), method: :delete do %>
          ♥<%= consultation_answer.helpfulnesses.count %> 役に立った
        <% end %>
      </p>
    <% else %>
      <p>
        <%= link_to consultation_consultation_answer_helpfulness_path(consultation_answer.consultation,consultation_answer), method: :post do %>
          ♡<%= consultation_answer.helpfulnesses.count %> 役に立った
        <% end %>
      </p>
    <% end %>
  </div>
  <% end %>
</div>
</div>


