<div class="plan_item-container">
  <div class="plan_item-container__header">
    <h1 class="text-center">CAMP PLAN <i class="fas fa-hiking"></i></h1>
  </div>
  <div class="plan_item-container__chart">
    <h3>ギア編集 <i class="far fa-calendar-alt"></i></h3>
  </div>
  <div class="plan_item-container__content">
    <%= form_with(model:[@user, @plan], url: user_plan_path(@user, @plan), method: :patch, local: true) do |f| %>
    <div class="plan_item-container__content__list">
      <% unless @items == nil %>
        <%= f.collection_check_boxes :item_ids, @items, :id, :name, checked: @plan.item_ids %>
      <% else %>
        <p>ギアの登録がありません</p>
      <% end %>
    </div>
      <%= f.hidden_field :title, :value => @plan.title %>
      <%= f.hidden_field :day, :value => @plan.day %>
      <%= f.hidden_field :place, :value => @plan.place %>
      <%= f.hidden_field :check_in_time, :value => @plan.check_in_time %>
      <%= f.hidden_field :check_out_time, :value => @plan.check_out_time %>
      <%= f.hidden_field :member, :value => @plan.member %>
      <%= f.hidden_field :memo, :value => @plan.memo %>
    <div class="plan_item-container__content__submit">
      <%= f.button :type => "submit", style: 'border-style: none;' do %>
        内容を更新する
      <% end %>
    </div>
    <% end %>
  </div>
</div>
