<div class="profile-container">
  <div class="profile">
    <%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
    <%= @user.name %>
    <%= @user.introduction %>
    <% if user_signed_in? %>
      <div id = "relation">
        <%= render "relations/follow", user: @user %>
      </div>
    <% end %>
    <%= render "navigation", user: @user %>
  </div>
  <div class="posts">
    <%= render "photo_posts/index", photo_posts: @photo_posts%>
  </div>
</div>