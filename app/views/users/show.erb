<div class="profile-container">
  <div class="profile">
    <%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image.jpg", class: "rounded-circle"  %>
    <%= @user.name %>
    <%= @user.introduction %>
    <% if user_signed_in? %>
      <div id = "relation">
        <%= render "relations/follow", user: @user %>
      </div>
    <% end %>
    <%= render "navigation", user: @user %>
  </div>
  <div class="posts">
    <h3><%= "#{@user.name} â€™PHOTO" %>  <i class="fas fa-camera"></i></h3>
    <%= render "photo_posts/index", photo_posts: @photo_posts%>
    <% if @user.photo_posts.count > 9 %>
      <%= link_to my_posts_user_path(@user) do %>
        <h2 class="text-right posts__more">..more<i class="fas fa-angle-double-right"></i></h2>
      <% end %>
    <% end %>
  </div>
</div>