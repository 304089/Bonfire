<!DOCTYPE html>
<html>
  <head>
    <title>Bornfire</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5b5304f2df.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <% if user_signed_in? && current_user.admin? %>
    あああ
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
  <% elsif user_signed_in? %>
    <%= link_to "マイページ", user_path(current_user) %>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to "新規登録", new_user_registration_path %>
    <%= link_to "ログイン", new_user_session_path %>
  <% end %>
  <%= render "layouts/search_form" %>
  <%= link_to "PHPTOs", photo_posts_path %>
  <%= link_to "相談コーナー", top_consultations_path %>
  <%= link_to "お問い合わせ", new_infomation_path %>
    <%= yield %>
  </body>
</html>
