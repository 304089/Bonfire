<% if photo_post.favorited_by?(current_user) %>
  <p>
    <%= link_to photo_post_favorite_path(photo_post), method: :delete, remote: true do %>
      ♥<%= photo_post.favorites.count %> いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to photo_post_favorite_path(photo_post), method: :post, remote: true do %>
      ♡<%= photo_post.favorites.count %> いいね
    <% end %>
  </p>
<% end %>