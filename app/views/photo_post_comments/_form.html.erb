<%= form_with(model:[photo_post, photo_post_comment], url: photo_post_photo_post_comments_path(photo_post, photo_post_comment), method: :post, remote: true) do |f| %>
  <%= f.text_field :comment, placeholder: "コメントを入力" %>
  <%= f.button :type => "submit", style: 'border-style: none;', class: "comment-btn" do %>
    <i class="fas fa-paper-plane"></i>
  <% end %>
<% end %>
